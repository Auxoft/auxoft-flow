#!/bin/sh


init() {
  require_git_repo
  require_af_initialized
  af_load_settings
  af_load_version
}


cmd_default() {
  usage
  exit 0
}


cmd_help() {
  usage
  exit 0
}


usage_init() {
  FLAGS_HELP=`cat << EndOfMessage
USAGE: af run <subcommand>

Try 'af run <subcommand> -h' for details.

  subcommand is specific to your project.
  
  If you want to use run subcommand to you need create ./bin/hooks/run script, please see in ./bin/hooks/run.example

EndOfMessage`
}


if [ ! -e "$AF_DIR/hooks/run" ]; then
  usage
  exit 1
fi

. "$AF_DIR/hooks/run"
